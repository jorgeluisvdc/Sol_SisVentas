@model List<FNT_BusinessEntities.Interface.DTOVenta>
@{
    Layout = null;
}
@if (Model.Count > 0)
{
    <div class="row">
        <div class="col-md-12" style="text-align:right;">
            <a class="btn btn-primary" href="@Url.Action("ExportaExcelVentas", "Ventas")">Exportar a Excel</a>
        </div>
    </div>
    <div style="height:10px;"></div>
}
@if (Model.Count <= 1500)
{
    <div class="row" style="font-size:11px;">
        <div class="col-md-12">
            <table id="TablaVentas" class="table table-striped table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th>COD VENTA</th>
                        <th>CLIENTE</th>
                        <th>FECHA</th>
                        <th>NRO.COMPROBANTE</th>
                        <th>TIPO COMPROBANTE</th>
                        <th>TOTAL</th>
                        <th>ACCIÓN</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var objVenta = item;
                        var Venta = Newtonsoft.Json.JsonConvert.SerializeObject(objVenta, Newtonsoft.Json.Formatting.Indented);

                        <tr>
                            <td>@item.IdVenta</td>
                            <td>@(item.NombreCliente + " " + item.ApePatCliente + " " + item.ApeMatCliente)</td>
                            <td>@(((DateTime)item.FechaCreacion).ToString("dd/MM/yyyy"))</td>
                            <td>@item.NroComprobante</td>
                            <td>@item.DescTipoComprobante</td>
                            <td>@item.TotalComprobante</td>
                            <td>
                                <input type="button" class="btn btn-success btn-sm" value="Ver detalle" onclick="VerDetalleVenta(@Venta);" />
                                @*<input type="button" class="btn btn-link btn-sm" value="Eliminar" onclick="ConfirmaEliminacion_AreaTrabajo(@TipoPago);" />*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row" style="font-size:11px;">
        <div class="col-md-12">
            <span class="text-danger">La consulta contiene más de 1,500 registros, debe descargar formato Excel para su verificación.</span>
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {

        $('#TablaVentas').DataTable({
            "scrollX": true,

            "language": {
                "sProcessing": "Procesando...",
                "sLengthMenu": "Mostrar _MENU_ registros",
                "sZeroRecords": "No se encontraron resultados",
                "sEmptyTable": "Ningún dato disponible en esta tabla",
                "sInfo": "Mostrando del _START_ al _END_ de _TOTAL_ registros",
                "sInfoEmpty": "Mostrando del 0 al 0 de 0 registros",
                "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                "sInfoPostFix": "",
                "sSearch": "Buscar:",
                "sUrl": "",
                "sInfoThousands": ",",
                "sLoadingRecords": "Cargando...",
                "oPaginate": {
                    "sFirst": "Primero",
                    "sLast": "Último",
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior"
                },
                "oAria": {
                    "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                    "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                }
            },
            "order": []
        });
    });

</script>
