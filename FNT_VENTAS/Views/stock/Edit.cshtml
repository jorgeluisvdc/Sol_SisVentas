@model FNT_DataModel.stock

@{
    ViewBag.Title = "Edit";
}

<div style="height:15px;"></div>
<h4>CATEGORIA > EDITAR</h4>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.idStock)

        <hr style="border: 0;opacity: 0.8;height: 2px;background: #007bff;display: block;margin: 1em 0;" />
        <div class="row">
            <label class="control-label col-md-2">Descripción</label>
            <div class="col-md-4">
                @Html.DropDownList("idProducto", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idProducto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <label class="control-label col-md-2"> Stock Actual</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.stockActual, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.stockActual, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <label class="control-label col-md-2"> Stock Minimo</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.stockMinimo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.stockMinimo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row">
            <label class="control-label col-md-2"> Stock Maximo</label>
            <div class="col-md-4">
                @Html.EditorFor(model => model.stockMaximo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.stockMaximo, "", new { @class = "text-danger" })
            </div>
        </div>


        <hr style="border: 0;opacity: 0.8;height: 2px;background: #007bff;display: block;margin: 1em 0;" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-success" />
                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>

    </div>
}
