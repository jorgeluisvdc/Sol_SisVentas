@using FNT_Common
@{
    ViewBag.Title = Constantes.Aplicaciones.Cliente.Titulo;
    ViewBag.SubTitle = "Proceso de registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height:10px;"></div>
<div id="contenedor">
    <div>
        @*<div>
                <button id="btnMnuRegistro" type="button" class="col-md-2 btn btn-dark btn-lg sgothic">Registro</button>
            </div>*@
        <div style="height:10px;"></div>
        <h3 class="sgothic">@ViewBag.Title</h3>
        <!-- <h4 id="subtitle" class="sgothic text-primary">@ViewBag.SubTitle</h4> -->
        <hr />
    </div>
    <div id="Div_Registros">
        @Html.Action("ConsultaCliente", "Cliente")
    </div>
    <div id="Div_Informacion"></div>
    <div id="Div_Confirmacion"></div>
    <div id="ModalRespuestaMsg"></div>
    <hr />
    <div id="Div_footer_btn" class="row">
        <div class="col-md-12" style="text-align:right;">
            <input type="button" class="btn btn-primary" id="btnNuevo" value="Nuevo" onclick="Nuevo_Cliente();" />
            <input type="button" class="btn btn-primary" id="btnRegistrar" value="Registrar" onclick="ConfirmaRegistro_Cliente();" />
            <input type="button" class="btn btn-primary" id="btnActualizar" value="Actualizar" onclick="ConfirmaActualizar_Cliente();" />
            <input type="button" class="btn btn-primary" id="btnCancelar" value="Cancelar" onclick="RegistroClienteCancelar(true);" />
        </div>
    </div>
    <hr style="border: 0;opacity: 0.8;height: 5px;background: #007bff;display: block;margin: 1em 0;" />
    <div id="pie">
        <div id="zonapie">
            <div id="direcciones">
                COPYRIGHT CEDIX @DateTime.Now.Year<br />
                Todos los derechos reservados.
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnRegistrar").hide();
        $("#btnActualizar").hide();
    });
</script>
