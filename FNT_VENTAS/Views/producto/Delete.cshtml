@model FNT_DataModel.producto

@{
    ViewBag.Title = "Delete";
}

<div style="height:15px;"></div>
<h4>PRODUCTO > BORRAR</h4>
<hr style="border: 0;opacity: 0.8;height: 2px;background: #007bff;display: block;margin: 1em 0;" />
<div>
    <div class="row">
        <div class="col-md-2">
            Descripción
        </div>
        <div class="col-md-2">
            @Html.DisplayFor(model => model.productoDescripcion)
        </div>
    </div>
        <div class="row">
            <div class="col-md-2">
                Precio
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.precioUnitario)
            </div>

        </div>

        <div class="row">
            <div class="col-md-2">
                Categoria
            </div>
            <div class="col-md-2">
                @Html.DisplayFor(model => model.categoria.descripcion)
            </div>
        </div> 
</div>     
<hr style="border: 0;opacity: 0.8;height: 2px;background: #007bff;display: block;margin: 1em 0;" />
   @using (Html.BeginForm())
   {
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Borrar" class="btn btn-danger" />
        @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
    </div>
   }
